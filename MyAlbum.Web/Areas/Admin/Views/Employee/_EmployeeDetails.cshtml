@model MyAlbum.Models.Employee.EmployeeDto

<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between mb-2">
        <h6 class="mb-0">員工明細</h6>
        <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
            @(Model.IsActive ? "啟用" : "停用")
        </span>
    </div>

    <div class="row g-3">
        <div class="col-12 col-md-6">
            <div class="small text-muted">員工編號</div>
            <div class="fw-semibold">@Model.EmployeeId</div>
        </div>
        <div class="col-12 col-md-6">
            <div class="small text-muted">姓名</div>
            <div class="fw-semibold">@Model.FullName</div>
        </div>
        <div class="col-12 col-md-6">
            <div class="small text-muted">職稱</div>
            <div>@(Model.Title ?? "-")</div>
        </div>
        <div class="col-12 col-md-6">
            <div class="small text-muted">到職日</div>
            <div>@(Model.HireDate?.ToString("yyyy-MM-dd") ?? "-")</div>
        </div>
    </div>

    <hr class="my-3" />

    <div class="d-flex gap-2 justify-content-end">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
        @* 這裡可依權限再加「編輯」等按鈕 *@
    </div>
</div>
